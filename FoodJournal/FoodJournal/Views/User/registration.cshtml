@model DataLayer.User

@{
    ViewBag.Title = "registration";
    Layout = "~/Views/Shared/headerAndFooter.cshtml";
}


@section styles{
    <style>
        #geomap {
            width: 100%;
            height: 400px;
        }
    </style>
    <link href="~/Content/css/jquery-ui.css" rel="stylesheet" />
}






<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="bg-info text-white">Registration</h1>
        </div>
    </div>

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-12 text-center">
                <h5 class="text-danger">@TempData["ErrorMessage"]</h5>
            </div>
        </div>



        @using (Html.BeginForm("Registration", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required", type = "text" } }  )
                       
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control",required = "required", type = "email" } })
                       
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", required = "required", type = "file" } })
                       
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", required = "required", type = "password" } })
                       
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="ui-widget">
                            <input class="form-control" name="Address" id="search_location" required="required">
                        </div>
                    </div>
                </div>

                <input name="Latitude" type="hidden" class="search_latitude">
                <input name="Longitude" type="hidden" class="search_longitude">

                <div class="form-group">
                    <div class="col-md-offset-6 col-md-2">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div class="container">
            <div class="col-md-12 text-center">
                <div id="geomap"></div>
            </div>
        </div>

    </div>



@section scripts{

    <script src="~/Content/js/jquery-ui.js"></script>
    <script src="~/Scripts/restaurant-create.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCqEJeUG6el1uAtNYRLvMBWr3tLasd2GhA"></script>


}
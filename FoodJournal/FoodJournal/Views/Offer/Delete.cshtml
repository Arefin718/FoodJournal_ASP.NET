@model DataLayer.Class.Offer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/headerAndFooter.cshtml";
}



<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="bg-danger text-white">Are you sure you want to delete this?</h1>
        </div>
    </div>  
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Restaurant.RestaurantName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Restaurant.RestaurantName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OfferDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OfferDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OfferValidity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OfferValidity)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="hidden" value="@Convert.ToInt32(Model.RestaurantId)" name="RestaurantId" />
            <input type="hidden" value="@Convert.ToInt32(Model.OfferId)" name="OfferId"/>
            <div class="form-actions no-color">
                <div class="row">
                    <div class="col-md-4 offset-4 text-center">
                        <input type="submit" value="Delete" class="btn-danger" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <a style="padding:10px; 5px;" href="/offer/showoffers/@Model.RestaurantId" class="bg-primary text-white">Back</a>
                </div>
            </div>
        </div>
    }
</div>

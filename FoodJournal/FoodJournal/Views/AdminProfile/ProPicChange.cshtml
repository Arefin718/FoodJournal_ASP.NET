@model DataLayer.Class.Admin

@{
    ViewBag.Title = "ProPicChange";
    Layout = "~/Views/Shared/adminheaderandfooter.cshtml";
}


<div class="container">

    @using (Html.BeginForm("ProPicChange", "AdminProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="row">
                <div class="col-md-12 text-center">
                    <h1 class="bg-info text-white">Profile Picture Change</h1>
                </div>
            </div>


            <div class="row">
                <div class="col-md-12 text-center">
                    <a style="font-size:25px;" href="/AdminProfile/view/@Model.AdminID">Back To Profile</a>
                </div>
            </div>



            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.AdminID)


            <div class="row">
                <div class="col-md-12 text-center">
                    <img style="width:300px; height300px;" src="@Model.Image" />
                </div>
            </div>

            <hr />

            <div class="form-group">
                @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="Image" required />
                </div>
            </div>

            <input type="hidden" name="UserID" value="@Model.AdminID" />
            <input type="hidden" name="AdminEmail" value="@Model.Email" />

            <div class="form-group">
                <div class="col-md-offset-6 col-md-2">
                    <input type="submit" value="Update" class="btn btn-default" />
                </div>
            </div>


        </div>
    }


</div>
